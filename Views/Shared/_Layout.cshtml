<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visa Wave</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;600;700&display=swap" rel="stylesheet">
    <link href="~/Content/MyCSSStyle/Layout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <section class="header">
        <nav>
            <a href="@Url.Action("Index", "Home", new { area = "" })">
                <img src="~/Content/Images/e-visa logo.png" />
            </a>
            <h1 class="logo-heading">
                Visa <span>Wave</span>
            </h1>
            <div class="nav-links" id="navLinks">
                <i class="fa fa-times" onclick="hideMenu()"></i>
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("About us", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li> @Html.ActionLink("Contact us", "AddContactFormMessageByUser", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Login", "Login", "Login", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Register", "Register", "User", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
            <i class="fa fa-bars" onclick="showMenu()"></i>
        </nav>
    </section>

    <div>
        @RenderBody()
    </div>

    <!-- footer section start -->
    <section class="footer">
        <div class="footer-column-1">
            <h3>Useful links</h3>
            <ul>
                <li> <a href="">About</a></li>
                <li> <a href="">Contact</a></li>
                <li> <a href="">Login</a></li>
                <li> <a href="">Register</a></li>
            </ul>
        </div>
        <div class="footer-column-2">
            <h3>Legal Information</h3>
            <ul>
                <li> <a href="">Privacy Policy</a></li>
                <li> <a href="">Terms of Use</a></li>
                <li> <a href="">Accessibility</a></li>
                <li> <a href="">Disclaimer</a></li>
            </ul>
        </div>
        <div class="footer-column-3">
            <h3>Contact us</h3>
            <p>123,XYZ Road, BSK 3<br>Bangalore,Karnataka,IN</p>
            <ul>
                <li><i class="fa-brands fa-instagram"></i></li>
                <li><i class="fa-brands fa-facebook"></i></li>
                <li><i class="fa-brands fa-twitter"></i></li>
                <li><i class="fa-brands fa-youtube"></i></li>
            </ul>
        </div>
    </section>
    <!-- footer section end -->
    <script src="~/Scripts/MyJS/-Layout.js"></script>
</body>
</html>