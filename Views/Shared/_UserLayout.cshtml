<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visa Wave</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Linking external CSS files for font icons -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Linking Bootstrap CSS file -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- Linking JavaScript bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    <!-- Linking external CSS files for font icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer">
    <link href="~/Content/MyCSSStyle/UserLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <section class="header">
        <nav>
            <a href="@Url.Action("UserIndex","User", new { area = "" })">
                <img src="~/Content/Images/e-visa logo.png" />
            </a>
            <h1 class="logo-heading">
                Visa <span>Wave</span>
            </h1>
            <div class="nav-links" id="navLinks">
                <i class="fa fa-times" onclick="hideMenu()"></i>
                <ul>
                    <li>@Html.ActionLink("Home", "UserIndex", "User", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Apply application", "EVisaApplicationFormForUser", "Application", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("View application", "RetrivesApplicationByUserIdForUser", "Application", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <!-- Link: My account -->
                    <li>@Html.ActionLink("My account", "GetUserById", "User", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <!-- Logout link -->
                    <li>@Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
            <i class="fa fa-bars" onclick="showMenu()"></i>
        </nav>
    </section>

    <div>
        @RenderBody()
    </div>

    <!-- footer section start -->
    <section class="footer">
        <div class="footer-column-1">
            <h3>Useful links</h3>
            <ul>
                <li> <a href="">Application</a></li>
                <li> <a href="">My account</a></li>
                <li> <a href="">Logout</a></li>
            </ul>
        </div>
        <div class="footer-column-2">
            <h3>Legal Information</h3>
            <ul>
                <li> <a href="">Privacy Policy</a></li>
                <li> <a href="">Terms of Use</a></li>
                <li> <a href="">Accessibility</a></li>
                <li> <a href="">Disclaimer</a></li>
            </ul>
        </div>
        <div class="footer-column-3">
            <h3>Contact us</h3>
            <p>123,XYZ Road, BSK 3<br>Bangalore,Karnataka,IN</p>
            <ul>
                <li><i class="fa-brands fa-instagram"></i></li>
                <li><i class="fa-brands fa-facebook"></i></li>
                <li><i class="fa-brands fa-twitter"></i></li>
                <li><i class="fa-brands fa-youtube"></i></li>
            </ul>
        </div>
    </section>
    <!-- footer section end -->
    <script src="~/Scripts/MyJS/UserLayout.js"></script>
</body>
</html>