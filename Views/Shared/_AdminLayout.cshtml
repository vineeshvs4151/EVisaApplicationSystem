<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visa Wave</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Linking external CSS files for font icons -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Linking Bootstrap CSS file -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    <!-- Linking JavaScript bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    <!-- Linking external CSS files for font icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer">
    <link href="~/Content/MyCSSStyle/AdminLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <section class="header">
        <nav>
            <a href="@Url.Action( "AdminHome","Admin", new { area = "" })">
                <img src="~/Content/Images/e-visa logo.png" />
            </a>
            <h1 class="logo-heading">
                Visa <span>Wave</span>
            </h1>
            <div class="nav-links" id="navLinks">
                <i class="fa fa-times" onclick="hideMenu()"></i>
                <ul>
                        <!-- Home link -->
                        <li>
                            @Html.ActionLink("Home", "AdminHome", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        </li>

                        <li>
                            <!-- Messages dropdown -->
                            <div class="dropdown">
                                <a class="nav-link navbar-brand" href="#" role="button" id="MessageDropdown" data-bs-toggle="dropdown" aria-expanded="false">Messages</a>
                                <ul class="dropdown-menu" aria-labelledby="MessageDropdown" style="background: #1890ff">
                                    <li>
                                        <a href="@Url.Action("GetAllContactFormMessagesForAdmin", "Home")" class="navbar-brand dropdown-item">View all messages</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrievesContactFormMessageDetailsByStatus", "Home", new {status = "Replied",area = "" })" class="navbar-brand dropdown-item">Replied messages</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrievesContactFormMessageDetailsByStatus", "Home", new {status = "Notreplied",area = "" })" class="navbar-brand dropdown-item">Not replied messages</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <!-- Applications dropdown -->
                            <div class="dropdown">
                                <a class="nav-link navbar-brand" href="#" role="button" id="ApplicationsDropdown" data-bs-toggle="dropdown" aria-expanded="false">Applications</a>
                                <ul class="dropdown-menu" aria-labelledby="ApplicationsDropdown" style="background: #1890ff">
                                    <li>
                                        <a href="@Url.Action("AddCountryByAdmin","Application", new {area = "" })" class="navbar-brand dropdown-item">Add country</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrievesAllCountriesForAdmin","Application", new {area = "" })" class="navbar-brand dropdown-item">List country</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AddVisaTypeByAdmin","Application", new {area = "" })" class="navbar-brand dropdown-item">Add visa type</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrievesAllVisaTypeForAdmin","Application", new {area = "" })" class="navbar-brand dropdown-item">List visa type</a>
                                    </li>
                                    <li>
                                        @Html.ActionLink("View all applications", "RetrievesAllApplicationForAdmin", "Application", new { area = "" }, new { @class = "navbar-brand dropdown-item" })
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrivesApplicationBystatusForAdmin","Application", new {status = "approved",area = "" })" class="navbar-brand dropdown-item">Approved applications</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrivesApplicationBystatusForAdmin","Application", new {status = "unapproved",area = "" })" class="navbar-brand dropdown-item">Unapproved applications</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("RetrivesApplicationBystatusForAdmin", new {status = "waiting",area = "" })" class="navbar-brand dropdown-item">Waiting applications</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li>
                            <!-- Logout link -->
                            @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "navbar-brand" })
                        </li>

                </ul>     
            </div>
            <i class="fa fa-bars" onclick="showMenu()"></i>
        </nav>
    </section>

    <div>
        @RenderBody()
    </div>

    <!-- footer section start -->
    <section class="footer">
        <div class="footer-column-1">
            <h3>Useful links</h3>
            <ul>
                <li> <a href="">Messages</a></li>
                <li> <a href="">Application</a></li>
                <li> <a href="">Logout</a></li>
            </ul>
        </div>
        <div class="footer-column-2">
            <h3>Legal Information</h3>
            <ul>
                <li> <a href="">Privacy Policy</a></li>
                <li> <a href="">Terms of Use</a></li>
                <li> <a href="">Accessibility</a></li>
                <li> <a href="">Disclaimer</a></li>
            </ul>
        </div>
        <div class="footer-column-3">
            <h3>Contact us</h3>
            <p>123,XYZ Road, BSK 3<br>Bangalore,Karnataka,IN</p>
            <ul>
                <li><i class="fa-brands fa-instagram"></i></li>
                <li><i class="fa-brands fa-facebook"></i></li>
                <li><i class="fa-brands fa-twitter"></i></li>
                <li><i class="fa-brands fa-youtube"></i></li>
            </ul>
        </div>
    </section>
    <!-- footer section end -->
    <script src="~/Scripts/MyJS/UserLayout.js"></script>
</body>
</html>