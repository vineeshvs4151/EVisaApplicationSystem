@model EVisaApplicationSystem.Models.Country

@{
    ViewBag.Title = "AddCountryByAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/MyCSSStyle/AddCountryByAdmin.css" rel="stylesheet" />

<!-- Container for the country form -->
<div class="country-container">
    <div class="form-box">
        @using (Html.BeginForm("AddCountryByAdmin", "Application", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Country form -->
            <div class="form-horizontal">
                <h4>Country</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Country Name field -->
                <div class="form-group">
                    @Html.LabelFor(model => model.CountryName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control", id = "countryname", onfocusout = "CheckCountryname()", required = "required" } })
                        @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                        <small class="text-danger" id="countryname-error"></small>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="form-group">
                    <div class="py-3 pb-4 border-bottom" style="text-align:center">
                        <button type="submit" class="btn btn-outline-primary mr-3" onclick="CheckFormValidate()">Add</button>
                        <a href="@Url.Action("AdminHome", "Admin")" class="btn btn-outline-danger ms-1">Cancel</a>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

<!-- JavaScript file -->
<script src="~/Scripts/MyJS/AddCountryByAdmin.js"></script>
